	get focus=true;
	[object0]
	{
		name=msg;
		type=TEXT;
		caption=message;
		x1=10;
		y1=30;
		x2=-10;
		y2=70;
		size=1;
	}
	[object1]
	{
	    name=b_ok;
	    type=BUTTON;
	    caption=OK;
	    x1=150;
	    y1=-25;
	    x2=250;
	    y2=-5;
	    size=1;
	    on click=ask.hide;
	}
