[window]
{
    name=popup;
	title=Message;
	uformat=UTF8;
	x=200;
	y=248;
	width=400;
	height=105;
	fullscreen=true;
	screen width=800;
	screen height=600;
	draw borders=true;
	show title=true;
	lock=false;
	number of objects=2;
	hidden=true;
	color=0xFFFFFFFF;
	background=gfx/mdrn_background.jpg;
